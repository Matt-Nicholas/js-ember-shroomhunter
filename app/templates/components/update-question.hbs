{{#if updateQuestionForm}}
 <h3>{{question.content}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Topic</label>
        {{textarea id="content" value=question.content}}
      </div>

      <div class="form-group">
        <label for="author">User</label>
        {{input id="author" value=question.author}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input id="date" value=question.date}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
