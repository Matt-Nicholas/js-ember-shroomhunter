<h5>Answer this question</h5>
<div class="answer-form-div">
  <form>
    <div class="form-group">
      <h5 id="answer-author">Username</h5>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <h5 id="answer-content">Answer</h5>
      {{textarea value=content id="content"}}
    </div>
    <button {{action 'saveAnswer'}}>Submit</button>
  </form>
</div>
