<h2>Shroom Hunter {{model.author}} asked</h2>

<div class="row">
  <div class="col-sm-8">
    <h3>{{model.content}}</h3>
    {{#each model.answers as |answer|}}
      {{answer-tile answer=answer}}
    {{/each}}
    {{question-detail question=model destroyQuestion="destroyQuestion"}}
    {{update-question question=model update="update"}}
  </div>
  <div class="col-sm-4">
    {{new-answer saveAnswer="saveAnswer" question=model}}

  </div>
</div>
